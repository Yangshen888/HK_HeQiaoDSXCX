
.cardBox{
	float:left; 
	width: 100%;
	margin: 10rpx 0;
	/* background-color: #FFFFFF; */
	-webkit-box-shadow: 0 0 2px rgba(0,0,0,0.2);
	        box-shadow: 0 0 2px rgba(0,0,0,0.2);
	height: 160rpx;
	line-height: 160rpx;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
	position: relative;
	padding-left: 20rpx;
}
.btnBox{
	width: 10%;
	text-align: center;
	float: left;
	padding-top: 4rpx;
}
.carditem{
	float: left;
	color: #fff;
}
.rightbtn{
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	right: 10px;
	float: right;
	color: #fff;
}

